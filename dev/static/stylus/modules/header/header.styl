header 
    display flex 
    justify-content: space-between  
    align-items: center  
    background-color: #fff 
    height 80px 
    padding: 25px 30px
 
.header-logo
    .icon 
        fill: #2F80ED
        size(84px,30px)
.header-message
    margin-right: 30px
    position: relative
    .icon 
        size(22px) 
    &:before 
        content ''
        position: absolute
        right: -2px;
        top: 3px; 
        background-color: #2F80ED
        size(6px)
        border-radius: 50%
.header-right-side
    display flex
    align-items: center         
.header-profile--img
    background-size: cover
    background-repeat: no-repeat 
    size(48px)
    margin-right: 15px
    border-radius: 50%
.header-profile-name
    font-family: MS600 
    font-size: 15px 
    color: #272727
.header-profile
    display flex 
    align-items: center 
    margin-right: 30px
.header-logout
    .icon 
        size(27px)
        fill: #F0433A  

