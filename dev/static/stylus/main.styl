@import 'utils/fonts.styl'
@import 'utils/vars.styl'
@import 'utils/mixins.styl'
@import 'libs.styl'

html
	font-size baseFontSize
	height 100%
	line-height 1.3

body
	font-family mainFont
	height 100%
	overflow: hidden

h1,h2,h3,h4,h5,h6
	margin 0

ul,li
	list-style-type none
	margin 0
	padding 0

p
	margin 0

a
	color black
	text-decoration none
	&:hover
		text-decoration none
		color inherit

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle

textarea
	resize none

section
	position relative

input,
select,
button
	outline none

*, *:before, *:after
	box-sizing border-box

.wrapper
	display flex
	flex-direction column
	height 100%

.content
	flex 1 0 auto
	background-color: #F2F2F2
.content-container
	overflow-y: auto
	height calc(100vh - 80px)
	padding-bottom: 30px
	margin-top: -30px
	padding-top: 30px
	padding-right: 10px !important

.content-container::-webkit-scrollbar
	width: 9px
	height: 9px
	border-radius: 8px
	background-color: transparent

.content-container::-webkit-scrollbar-thumb
	border-radius: 8px
	background-color: #2f80ed
.content-container::-webkit-scrollbar-button
    display: block
   	width: 20px
    height: 20px
	background-color: transparent
.content-container::-webkit-scrollbar-button:vertical:start:decrement
    opacity 0
    background-color: transparent
.content-container::-webkit-scrollbar-button:vertical:end:increment
    opacity 0
    background-color: #f6f8f4
.content-wrapper
	margin-right: 7px !important
.section-lk-inputs
	overflow-y: auto
	height: calc(100vh - 186px);

